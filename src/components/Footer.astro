---
import { FaGithub } from "react-icons/fa";
import pkg from "@/../package.json";

const year = new Date().getFullYear();
const version = pkg.version;
const metadata = pkg.metadata;
---

<footer
  class="mt-10 py-8 border-t border-gray-300 dark:border-gray-700 text-sm text-gray-600 dark:text-gray-400"
>
  <div
    class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center gap-4"
  >
    <div class="text-center md:text-left">
      <p class="mb-1">
        Made with ❤️ for <strong>{metadata.author}</strong>
      </p>
      <p class="text-xs">
        © {year}
        {metadata.author}. All rights reserved. (v{version})
      </p>
    </div>

    <div class="flex flex-col items-center md:items-end gap-2">
      <a
        href="https://github.com/Lucho00Cuba/english-arena"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-1 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
      >
        <FaGithub className="w-5 h-5" />
        GitHub
      </a>

      <div class="flex gap-4 text-xs">
        <a
          href={`mailto:${metadata.email}`}
          class="hover:underline hover:text-blue-600 dark:hover:text-blue-400"
          >Email Contact</a
        >
      </div>
    </div>
  </div>
</footer>
